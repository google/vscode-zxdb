{
  "name": "zxdb",
  "displayName": "zxdb",
  "description": "Fuchsia debugger",
  "version": "0.0.2",
  "publisher": "fuchsia-authors",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.48.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "url": "https://github.com/google/vscode-zxdb"
  },
  "activationEvents": [
    "onDebug",
    "onDebugDynamicConfigurations:zxdb"
  ],
  "main": "./out/extension.js",
  "icon": "images/zxdb-logo-128x128.png",
  "contributes": {
    "breakpoints": [
      {
        "language": "c"
      },
      {
        "language": "cpp"
      },
      {
        "language": "rust"
      }
    ],
    "debuggers": [
      {
        "type": "zxdb",
        "label": "zxdb",
        "languages": [
          "cpp",
          "c",
          "rust"
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "process",
              "launchCommand"
            ],
            "properties": {
              "process": {
                "type": "string",
                "description": "Name of the process to debug",
                "default": "${command:PickProcess}"
              },
              "launchCommand": {
                "type": "string",
                "description": "Command with arguments to launch the process",
                "default": "${command:EnterLaunchCommand}"
              }
            }
          },
          "attach": {
            "required": [
              "process"
            ],
            "properties": {
              "process": {
                "type": "string",
                "description": "Name of the process to debug",
                "default": "${command:PickProcess}"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "zxdb",
            "request": "attach",
            "name": "zxdb attach process",
            "process": "${command:PickProcess}"
          },
          {
            "type": "zxdb",
            "request": "launch",
            "name": "zxdb launch process",
            "process": "${command:PickProcess}",
            "launchCommand": "${command:EnterLaunchCommand}"
          }
        ],
        "configurationSnippets": [
          {
            "label": "zxdb: attach",
            "description": "A new configuration for attaching to a process on target and start debugging. The process would have to be started seperately or should already be running on the target.",
            "body": {
              "type": "zxdb",
              "request": "attach",
              "name": "zxdb attach process",
              "process": "^\"\\${command:PickProcess}\""
            }
          },
          {
            "label": "zxdb: launch",
            "description": "A new configuration for launching a process on target and start debugging.",
            "body": {
              "type": "zxdb",
              "request": "launch",
              "name": "zxdb launch process",
              "process": "^\"\\${command:PickProcess}\"",
              "launchCommand": "^\"\\${command:EnterLaunchCommand}\""
            }
          }
        ],
        "variables": {
          "PickProcess": "extension.zxdb.pickProcess",
          "EnterLaunchCommand": "extension.zxdb.enterLaunchCommand"
        }
      }
    ],
    "configuration": {
      "title": "zxdb",
      "properties": {
        "zxdb.debug": {
          "scope": "window",
          "type": "boolean",
          "default": false,
          "description": "Enable logging of additional debugging messages"
        },
        "zxdb.command": {
          "scope": "window",
          "type": "string",
          "default": "fx debug -- --enable-debug-adapter",
          "description": "Terminal command to start zxdb console."
        },
        "zxdb.timeout": {
          "scope": "window",
          "type": "number",
          "default": 30000,
          "description": "Timeout in ms for waiting on zxdb console to start."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "await-notify": "1.0.1",
    "vscode-debugadapter": "1.40.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.48.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "eslint": "^7.19.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
